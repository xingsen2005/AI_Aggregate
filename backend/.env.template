# AI聚合应用环境变量配置模板
# 请将此文件重命名为.env并填写实际值

# API Keys
DOUBAO_API_KEY=
DEEPSEEK_API_KEY=
OPENAI_API_KEY=
KIMI_API_KEY=
TX_HUNYUAN_API_KEY=
GOOGLE_API_KEY=

# Redis配置
REDIS_URL=redis://localhost:6379/0

# Flask配置
FLASK_ENV=development
FLASK_DEBUG=true
PORT=5000

# 应用配置
SIMULATION_MODE=false
# 当SIMULATION_MODE=true时，即使没有API Key也可以使用模拟数据进行测试

# 缓存配置
CACHE_TTL=3600  # 缓存有效时间（秒）
CACHE_SIZE_LIMIT=1000  # 最大缓存条目数

# 资源监控阈值
HIGH_CPU_THRESHOLD=80  # CPU使用率高阈值（%）
HIGH_MEMORY_THRESHOLD=85  # 内存使用率高阈值（%）